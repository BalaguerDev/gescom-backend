generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  auth0Id         String   @unique
  email           String
  name            String?
  startPoint      String?
  startTime       String?
  endPoint        String?
  endTime         String?
  userImage       String?
  objetivos       Json?    // ðŸ”¥ GuardarÃ¡ los objetivos mensuales (enero, febrero, etc.)
  hasConfigured   Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Client {
  id                 Int       @id @default(autoincrement())
  name               String
  cif                String
  phone              String
  email              String
  address            String
  category           String
  notes              String?
  lat                Float?
  lng                Float?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  orders             Order[]
  revenueCurrentYear Json
  revenueLastYear    Json
}

model Order {
  id          Int         @id @default(autoincrement())
  clientId    Int
  orderNumber String
  date        DateTime
  total       Float
  client      Client      @relation(fields: [clientId], references: [id])
  items       OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  ref       String
  nombre    String
  cantidad  Int
  precio    Float
  total     Float
  order     Order   @relation(fields: [orderId], references: [id])
}
