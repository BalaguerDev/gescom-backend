datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id                 Int      @id @default(autoincrement())
  name               String
  cif                String
  phone              String
  email              String
  address            String
  category           String?    // VIP, Regular, Potencial
  notes              String?
  orders             Order[]
  revenueLastYear    Json
  revenueCurrentYear Json
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Order {
  id          Int      @id @default(autoincrement())
  clientId    Int
  orderNumber String
  productName String
  references  String[]
  units       Int
  price       Float
  date        DateTime

  client Client @relation(fields: [clientId], references: [id])
}
